@inherits LayoutComponentBase

<PageTitle>FeedbackApp</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />           
        </div>

        <article class="content px-4">
            <AuthorizeView Context="authContext">
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                   <LogOutDisplay/>
                </NotAuthorized>
            </AuthorizeView>
        
        </article>
    </main>
</div>
